@using Sports.MVC.Models.Concrete
@model List<PlayerViewModel>

<a class="btn btn-success" role="button" asp-controller="Player" asp-action="Add">Yeni</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">PlayerName</th>
            <th scope="col">PlayerSurname</th>
            <th scope="col">PlayerBirthDate</th>
            <th scope="col">Gender</th>
            <th scope="col">Branch</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (PlayerViewModel player in Model)
            {
                <tr>

                    <td>@player.Id</td>
                    <td>@player.PlayerName</td>
                    <td>@player.PlayerSurname</td>
                    <td>@player.PlayerBirthDate</td>
                    <td>@player.Gender</td>
                    <td>@player.Branch.Name</td>

                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Player" asp-action="Edit" asp-route-id="@player.Id" role="button" class="btn btn-warning">Düzenle</a>
                            <a asp-controller="Player" asp-action="Remove" asp-route-id="@player.Id" role="button" class="btn btn-danger">Sil</a>
                        </div>
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">
                    <p class="text-muted text-center">Liste boş</p>
                </td>
            </tr>
        }
    </tbody>
</table>