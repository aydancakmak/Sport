@using Sports.MVC.Models.Concrete
@model TeamViewModel

<div class="card">
	<div class="card-header">
		YENİ
	</div>
	<div class="card-body">
		<form class="row g-3" asp-controller="Team" asp-action="Add" method="post">
			<div class="col-md-12">
				<label asp-for="TeamName" class="form-label"></label>
				<input asp-for="TeamName" class="form-control" />
				<span asp-validation-for="TeamName" class="text-danger"></span>
			</div>
			<div class="col-md-12">
				<label asp-for="FoundedYear" class="form-label"></label>
				<input asp-for="FoundedYear" class="form-control" />
				<span asp-validation-for="FoundedYear" class="text-danger"></span>
			</div>
			<div class="col-md-12">
				<label asp-for="City" class="form-label"></label>
				<input asp-for="City" class="form-control" />
				<span asp-validation-for="City" class="text-danger"></span>
			</div>

			<div class="col-12">
				<input type="submit" class="btn btn-success" value="Ekle" />
			</div>
		</form>
	</div>
	<div class="card-footer text-body-secondary">
		<span class="badge text-info">@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</span>
	</div>
</div>

@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}