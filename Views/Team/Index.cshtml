@using Sports.MVC.Models.Concrete
@model List<TeamViewModel>

<a class="btn btn-success" role="button" asp-controller="Team" asp-action="Add">Yeni</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">TeamName</th>
            <th scope="col">FoundedYear</th>
            <th scope="col">City</th>
            <th scope="col">İşlemler</th>
            
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (TeamViewModel team in Model)
            {
                <tr>

                    <td>@team.Id</td>
                    <td>@team.TeamName</td>
                    <td>@team.FoundedYear</td>
                    <td>@team.City</td>
                    
                    
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Team" asp-action="Edit" asp-route-id="@team.Id" role="button" class="btn btn-warning">Düzenle</a>
                            <a asp-controller="Team" asp-action="Remove" asp-route-id="@team.Id" role="button" class="btn btn-danger">Sil</a>
                        </div>
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">
                    <p class="text-muted text-center">Liste boş</p>
                </td>
            </tr>
        }
    </tbody>
</table>